rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read all users (for finding friends, etc.)
    // but only write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Messages collection - users can read and write their own messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Stories collection - users can read and write their own stories
    match /stories/{storyId} {
      allow read, write: if request.auth != null;
    }
    
    // Chats collection - users can read and write chats they participate in
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    // For development purposes - allow all authenticated users to read/write
    // TODO: Make these more restrictive in production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 